<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaustubh.android.popularmovies.DetailMovie"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:background="#009688"
        android:textColor="@android:color/white"
        android:id="@+id/detail_movie_title"
        android:layout_alignParentTop="true"
        android:textSize="36sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="32dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_poster"
        android:layout_below="@id/detail_movie_title"
        android:layout_margin="16dp"
        android:minHeight="150dp"



    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_releasedate"
        android:layout_below="@id/detail_movie_title"
        android:layout_toRightOf="@id/detail_movie_poster"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Year of release"
        android:textSize="24sp"
        android:gravity="center"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_rating"
        android:layout_below="@id/detail_movie_releasedate"
        android:layout_toRightOf="@id/detail_movie_poster"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:text="Rating"
        android:textSize="20sp"
        android:gravity="center"

        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_overview"
        android:layout_below="@id/detail_movie_poster"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        />

</RelativeLayout>
    </ScrollView>
